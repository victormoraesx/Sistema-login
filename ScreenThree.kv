
<ScreenThreeView>
    height: senhaRedefinir.height
    name: "s3"
    MDScreen:
        Image:
            source: "imagens/redefinir/background.png"
            size_hint:(1, 1)
            pos_hint: {"center_x": 0.5, "center_y": 0.7}

        Image:
            source: "imagens/redefinir/background.png"
            size_hint:(1, 1)
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
        
        Image:
            id: tela1
            source: "imagens/redefinir/background_redefinir_cima.png"
            size_hint: (1, 1)
            pos_hint: {"center_x": 0.3, "center_y": 0.7}

        Image:
            id: tela2
            source: "imagens/redefinir/background_redefinir.png"
            size_hint: (0, 0)
            pos_hint: {"center_x": 0.3, "center_y": 0.23}

        MDTextField:
            id: telefoneTrocarSenha
            hint_text: "Informe o telefone cadastrado"
            pos_hint: {"center_x": 0.3, "center_y": 0.859}
            size_hint_x: 0.35
            icon_left: "phone"
        
        MDFillRoundFlatButton:
            id: enviarCodigo
            text: "Enviar código"
            font_size: 18
            theme_text_color: "Hint"
            md_bg_color: 0.15, 0.33, 0.42
            pos_hint: {"center_x": 0.3, "center_y": 0.77}
            size_hint_x: .3
            on_release:
                root.enviarCodigo()

        MDTextField:
            id: codigoVerificador
            hint_text: "Código enviado"
            font_size_hint_text: 10
            pos_hint: {"center_x": 0.3, "center_y": 0.6}
            size_hint_x: .2
            helper_text_color_normal: "red"
            helper_text_mode: "persistent"
            icon_left: "asterisk"
        
        MDFillRoundFlatButton:
            text: "Validar"
            font_size: 18
            theme_text_color: "Hint"
            md_bg_color: 0.15, 0.33, 0.42
            pos_hint: {"center_x": 0.29, "center_y": 0.5}
            size_hint_x: .2
            on_release: 
                root.validarCodigo()
        
        MDFillRoundFlatButton:
            text: "Voltar"
            font_size: 18
            pos_hint: {"center_x": 0.7, "center_y": 0.3}
            size_hint_x: .2
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = 's1'
        
        MDTextField:
            id: senhaRedefinir
            hint_text: "Digite a nova senha"
            font_size: 18
            pos_hint: {"center_x": 0.3, "center_y": 0.27}
            size_hint_x: .3
            password: True
            icon_left: "key-variant"

        MDIconButton:
            icon: "eye-off"
            pos_hint: {"center_x": 0.43, "center_y": 0.27}
            pos: senhaRedefinir.width - self.width + dp(8), 0
            theme_text_color: "Hint"
            on_release:
                self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                senhaRedefinir.password = False if senhaRedefinir.password is True else True
                
        MDFillRoundFlatButton:
            text: "Redefinir"
            font_size: 18
            theme_text_color: "Hint"
            md_bg_color: 0.15, 0.33, 0.42
            pos_hint: {"center_x": 0.3, "center_y": 0.17}
            size_hint_x: .2
            on_release:
                root.redefinirSenha()